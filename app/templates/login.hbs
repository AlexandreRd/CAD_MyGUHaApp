{{!--outlet--}}

<body style="background-color:#bfe2f5;">

<div class="row">
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
                {{input id="email" type="email" class="validate" value=email}}
                <label for="email">Correo Electrónico</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                {{input id="password" type="password" class="validate" value=password}}
                <label for="password">Contraseña</label>
            </div>
        </div>
        <div class="row">
            
            <button {{action 'iniciarSesion'}} class="btn waves-effect waves-light light-blue darken-2"> 
                Iniciar Sesión
            </button>
        </div>
    </form>
</div>

</body>